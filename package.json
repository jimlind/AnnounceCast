{
    "name": "announcecast",
    "description": "AnnounceCast - Podcast New Release Announcement Bot for Discord",
    "version": "2.0.0-beta.22",
    "private": false,
    "license": "AGPL-3.0",
    "author": "Jim Lind",
    "repository": {
        "type": "git",
        "url": "https://github.com/jimlind/AnnounceCast"
    },
    "engines": {
        "node": "^22"
    },
    "type": "module",
    "main": "dist/app.js",
    "scripts": {
        "test": "NODE_OPTIONS='--loader ts-node/esm' mocha 'test/**/*.ts' --recursive",
        "prettier": "prettier --config .prettierrc.json 'src/**/*.ts' --write",
        "lint": "eslint src/** test/**",
        "clean": "rm -rf dist",
        "build": "npm run clean && tsc",
        "start": "npm run build && NODE_ENV=development node dist/app.js",
        "production": "npm run build && NODE_ENV=production node dist/app.js"
    },
    "dependencies": {
        "awilix": "^10.0.2",
        "axios": "^1.7.2",
        "better-sqlite3": "^11.1.2",
        "discord.js": "^14.15.3",
        "dotenv": "^16.4.5",
        "exit-hook": "^4.0.0",
        "log4js": "^6.9.1",
        "markdown-truncate": "^1.1.1",
        "normalize-url": "^8.0.1",
        "podparse": "^1.6.0",
        "pretty-ms": "^9.0.0",
        "turndown": "^7.2.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.6.0",
        "@inquirer/prompts": "^5.1.2",
        "@types/better-sqlite3": "^7.6.11",
        "@types/mocha": "^10.0.7",
        "@types/node": "^20.14.10",
        "@types/sinon": "^17.0.3",
        "@types/turndown": "^5.0.4",
        "eslint": "^8.57.0",
        "globals": "^15.8.0",
        "mocha": "^10.6.0",
        "prettier": "^3.3.2",
        "prettier-plugin-organize-imports": "^4.0.0",
        "sinon": "^18.0.0",
        "ts-node": "^10.9.2",
        "typescript": "^5.5.3",
        "typescript-eslint": "^7.16.0"
    }
}
